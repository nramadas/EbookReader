<div id="backdrop"></div>
<div id="display"></div>
<div id="back">
  <div class="backDisplay">Return to bookshelf</div>
</div>
<div id="next">
  <div class="nextDisplay">Next Page &#9658;</div>
</div>
<div id="prev">
  <div class="prevDisplay">&#9668; Prev Page</div>
</div>

<script>
  $(function() {

    var book = new Book.Display($("#display"), <%= @book.id %>,
                                <%= @book_ownership.id %>,
                                <%= @book_ownership.current_chapter %>, 
                                <%= @book_ownership.start_paragraph %>, 
                                <%= @book_ownership.end_paragraph %>);
    book.loadBook();

    $("#back").children().hide();
    $("#next").children().hide();
    $("#prev").children().hide();

  });

  $(window).on("unload", function() {
    book.unloadBook();
  });

  $(window).on("beforeunload", function() {
    book.unloadBook();
  });
</script>